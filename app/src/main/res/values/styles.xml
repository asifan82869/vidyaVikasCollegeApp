<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="headStyle">
        <item name="android:textSize">@dimen/_28sdp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="fontFamily">@font/mark_bold</item>
    </style>

    <style name="containStyle">
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="fontFamily">@font/mark_med</item>
        <item name="android:paddingBottom">@dimen/_20sdp</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">#FFFFB88C</item>
    </style>

    <style name="settingStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="backgroundColor">@android:color/white</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_2sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>