<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.OptionSettingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/uploadInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:id="@+id/collegeUploadPhotos"
            android:background="@drawable/edit_shape"
            app:layout_constraintTop_toTopOf="@+id/uploadInfo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCollegeUploadPhotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="College"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_20sdp"
                app:layout_constraintStart_toStartOf="@+id/collegeUploadPhotos"
                app:layout_constraintTop_toTopOf="@+id/collegeUploadPhotos" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:id="@+id/eventUploadPhotos"
            android:background="@drawable/edit_shape"
            app:layout_constraintTop_toBottomOf="@+id/collegeUploadPhotos"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEventUploadPhotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Event"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_20sdp"
                app:layout_constraintStart_toStartOf="@+id/eventUploadPhotos"
                app:layout_constraintTop_toTopOf="@+id/eventUploadPhotos" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:id="@+id/sportUploadPhotos"
            android:background="@drawable/edit_shape"
            app:layout_constraintTop_toBottomOf="@+id/eventUploadPhotos"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSportUploadPhotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Sport"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_20sdp"
                app:layout_constraintStart_toStartOf="@+id/sportUploadPhotos"
                app:layout_constraintTop_toTopOf="@+id/sportUploadPhotos" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:id="@+id/libraryUploadPhotos"
            android:background="@drawable/edit_shape"
            app:layout_constraintTop_toBottomOf="@+id/sportUploadPhotos"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLibUploadPhotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Library"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_20sdp"
                app:layout_constraintStart_toStartOf="@+id/libraryUploadPhotos"
                app:layout_constraintTop_toTopOf="@+id/libraryUploadPhotos" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>